<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#EAEAEA"
    android:id="@+id/root"
    tools:context=".SplashActivity">




    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_splash_vector"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apporio_logo"
        android:layout_marginBottom="230dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_gravity="center|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetching player ID . . . ."
            android:textColor="#0B4B90"
            android:textSize="11dp"
            fontPath="fonts/GoogleSans-Bold.ttf"
            tools:ignore="MissingPrefix"
            android:id="@+id/loading_text"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/name_layout"
            android:visibility="gone"
            android:padding="10dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:hint="Enter your name to identify your phone"
                android:textSize="11dp"
                android:id="@+id/name_edt"
                android:paddingLeft="10dp"
                android:background="#DDDDDD"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:padding="11dp"
                    android:id="@+id/save_btn"
                    fontPath="fonts/GoogleSans-Bold.ttf"
                    tools:ignore="MissingPrefix"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>



</FrameLayout>