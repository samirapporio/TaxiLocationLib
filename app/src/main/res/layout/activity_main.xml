<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|right">




            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_socket_disconnected_vector"
                android:padding="7dp"
                android:id="@+id/socket_connection_state"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unique No - "
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:id="@+id/unique_no_text"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#bbbbbb"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing Log part"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#bbbbbb"
                    android:layout_margin="10dp"/>


            </LinearLayout>






            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#E4E4E4"
                    android:layout_weight="1"
                    android:id="@+id/edittext"
                    android:hint="e.g. Add your full name"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:layout_margin="20dp"/>


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Add Extra Data"
                    android:id="@+id/extra_data"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/select_log_type_layout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:id="@+id/log_level_text"
                            android:textColor="#333333"
                            android:text="Debug bug"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="10dp"
                            android:tint="#333333"
                            android:src="@drawable/ic_sort_down_vector"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#8B2F54"
                            android:text="( Tag = MainActivity )"/>


                    </LinearLayout>


                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your log value"
                        android:id="@+id/log_input_edt"
                        android:textSize="13dp"/>



                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Log"
                    android:id="@+id/add_log_btn"/>
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trial"
                android:id="@+id/trialll"/>


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Phone State"
                android:layout_margin="20dp"
                android:id="@+id/phone_state"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#bbbbbb"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Socket part"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#bbbbbb"
                    android:layout_margin="10dp"/>


            </LinearLayout>





            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_margin="20dp"
                android:gravity="center">


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1">
                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MapsActivity" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/connected_devices_btn">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="fill_parent"
                                android:id="@+id/device_image"
                                android:src="@drawable/ic_connected_devices"
                                android:padding="4dp"/>

                            <ProgressBar
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:visibility="gone"
                                android:id="@+id/device_progress_fetch"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Devices"
                                android:id="@+id/device_fetch_text"
                                android:textColor="#333333"
                                android:textSize="7dp"/>
                        </LinearLayout>


                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="49dp"
                            android:background="#ffffff"
                            android:hint="Enter key To listen"
                            android:padding="5dp"
                            android:layout_weight="1"

                            android:textSize="13dp"
                            android:paddingLeft="5dp"
                            android:id="@+id/edt_listen_box"
                            android:layout_marginRight="5dp"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="fill_parent"
                            android:background="#333333"
                            android:text="OK"
                            android:textColor="#ffffff"
                            android:id="@+id/ok_listen_button"
                            android:textStyle="bold"/>


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="#333333"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="Remove Listeners"
                            android:textColor="#ffffff"
                            android:textSize="9dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/remove_current_listener"
                            android:textStyle="bold"/>



                    </LinearLayout>






                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetched_text"
                    android:textSize="12dp"
                    android:text=" - - - - - - - - - -"/>


                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="#333333"
                    android:text="STOP all listeners"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#ffffff"
                    android:id="@+id/stop_listen_button"
                    android:textStyle="bold"/>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>







</LinearLayout>